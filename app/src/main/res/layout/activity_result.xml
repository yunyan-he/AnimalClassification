<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 使用普通 CardView 包裹图片 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Image for animal recognition"
                    tools:src="@drawable/sample"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <!-- 使用普通 TextView 替代 MaterialTextView -->
            <TextView
                android:id="@+id/recognitionResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recognition Result"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/GeminiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@+id/recognitionResult"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?android:attr/textColorSecondary"
                android:gravity="center"/>
            <TextView
                android:id="@+id/GeminiInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/sample_baike_info"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@+id/GeminiTitle"
                android:layout_marginTop="2dp"
                android:paddingBottom="100dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="?android:attr/textColorSecondary" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 左侧按钮：调用百度 API，使用普通 Button 替代 MaterialButton -->
    <Button
        android:id="@+id/btnGeminiApi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:text="Gemini Recognition"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent2" />

    <!-- 右侧按钮：跳转到详细页面，使用普通 Button 替代 MaterialButton -->
    <Button
        android:id="@+id/btnDetailPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="More Info"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorAccent1" />

    <!-- **加载界面** -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:background="?android:attr/colorBackground">

        <!-- 加载提示信息 -->
        <TextView
            android:id="@+id/loadingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recognizing..."
            android:textSize="18sp"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- 加载进度条 -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/loadingText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:progressTint="?android:attr/colorAccent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
